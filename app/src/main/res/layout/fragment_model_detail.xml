<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.modesteam.pardal.ModelDetailFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="com.modesteam.pardal.ModelDetailFragment"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/RelativeModelDetail">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Detalhes:"
            android:id="@+id/textViewDetalhes"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewName"
            android:textSize="18dp"
            android:text="New Text"
            android:layout_below="@+id/textViewDetalhes"
            android:layout_centerHorizontal="true"
            android:textColor="#ff2b2dff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Maior velocidade registrada:"
            android:id="@+id/textView2"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/textViewName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewTopSpeed"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignLeft="@+id/textViewAverangeVelocity"
            android:layout_alignStart="@+id/textViewAverangeVelocity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Velocidade excedida media:"
            android:id="@+id/textView4"
            android:layout_alignBottom="@+id/textViewAverangeVelocity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewAverangeVelocity"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewDetalhes"
            android:layout_toEndOf="@+id/textViewDetalhes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Quantidade de multas: "
            android:id="@+id/textView5"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/textView4"
            android:layout_toLeftOf="@+id/textViewAverangeVelocity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textViewTickets"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/textViewAverangeVelocity"
            android:layout_alignStart="@+id/textViewAverangeVelocity" />

    </RelativeLayout>
</FrameLayout>